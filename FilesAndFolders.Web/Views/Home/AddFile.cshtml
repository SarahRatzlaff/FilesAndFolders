@model FilesAndFolders.Data.Models.File

@{
    ViewBag.Title = "AddFile";
}


<style>
    body {
        background: #0094ff;
    }
</style>

<h2 style="text-align: center;">Add your File</h2> <br /> <br />
<form method="post">
    @Html.HiddenFor(x => x.FileId)
    @Html.HiddenFor(x => x.FolderId)
    <div style="width: 310px;"><span style="float: left;">File Name</span> <span style="float: right;">@Html.TextBoxFor(x => x.Name) </span></div>
    <br /><br />
    <div style="width: 310px;"><span style="float: left;">Size of File (number)</span> <span style="float: right;">@Html.TextBoxFor(x => x.Size) </span></div>
    <div style="width: 310px;"><span style="float: left;">File Url</span> <span style="float: right;">@Html.TextBoxFor(x => x.Url) </span></div>
    <br /><br />
    <input style=" margin-bottom: 100px; float: left;" type="submit" value="Add File" />
</form>

